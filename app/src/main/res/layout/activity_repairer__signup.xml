<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cus_reg_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:padding="30dp"
        tools:context=".Repairer_Signup">

        <TextView
            android:id="@+id/rep_reg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:text="Repairer Signup"
            android:textColor="@color/colorAccent"
            android:textSize="32dp"></TextView>

        <EditText
            android:id="@+id/rep_un_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rep_reg_tv"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/colorAccent"
            android:hint="user_name (billy.ruso)"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="normal"></EditText>

        <Spinner
            android:id="@+id/area_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rep_un_edt"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorAccent"
            android:textAlignment="gravity"></Spinner>

        <EditText
            android:id="@+id/address_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/area_sp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorAccent"
            android:hint="(G-10,hafeez center)"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="normal"></EditText>

        <EditText
            android:id="@+id/reg_no_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_edt"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorAccent"
            android:hint="reg no (456987412365569)"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="normal"></EditText>

        <EditText
            android:id="@+id/cnic_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_no_edt"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorAccent"
            android:hint="cnic (3460456321458)"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="normal"></EditText>

        <EditText
            android:id="@+id/base_fare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cnic_edt"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorAccent"
            android:hint="base fare (500)"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="normal"></EditText>




        <Spinner
            android:id="@+id/skill_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/base_fare"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorAccent"
            android:textAlignment="gravity"></Spinner>


        <EditText
            android:id="@+id/pwd_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/skill_sp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorAccent"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="normal"></EditText>

        <EditText
            android:id="@+id/phone_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pwd_edt"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorAccent"
            android:hint="phone (3068383883)"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="normal"></EditText>

        <Button
            android:id="@+id/get_var_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_edt"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corners"
            android:text="Get VErification Code"
            android:textColor="@color/background"
            android:textSize="16dp"></Button>

        <EditText
            android:id="@+id/code_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_var_btn"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorAccent"
            android:hint="code (789456)"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="normal"></EditText>


        <Button
            android:id="@+id/rep_reg_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/code_edt"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_corners"
            android:text="Sign Up"
            android:textColor="@color/background"
            android:textSize="16dp"></Button>

    </RelativeLayout>
</ScrollView>
