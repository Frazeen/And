<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/login_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:padding="30dp"
        tools:context=".Login">

        <TextView
            android:id="@+id/login_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:text="@string/login_btn"
            android:textColor="@color/colorAccent"
            android:textSize="32dp"></TextView>

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_login_tv"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/colorAccent"
            android:hint="3068383883"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="normal"></EditText>

        <Spinner
            android:id="@+id/role_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorAccent"
            android:textAlignment="gravity"></Spinner>


        <EditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/role_sp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorAccent"
        android:hint="@string/pwd_edt"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="normal"></EditText>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pwd"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corners"
            android:text="@string/login_btn"
            android:textColor="@color/background"
            android:textSize="16dp"></Button>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login"
            android:layout_marginTop="10dp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="1">

            <Button
                android:id="@+id/register_cus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginRight="2dp"
                android:background="@drawable/rounded_corners"
                android:text="Customer Signup"
                android:textAlignment="gravity"
                android:textAllCaps="false"
                android:textColor="@color/background"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/register_rep_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginLeft="2dp"
                android:background="@drawable/rounded_corners"
                android:text="Repairer Signup"
                android:textAlignment="gravity"
                android:textAllCaps="false"
                android:textColor="@color/background"
                android:textSize="16dp"></Button>
        </GridLayout>
    </RelativeLayout>
</ScrollView>